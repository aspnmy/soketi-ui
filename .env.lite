# LiteSQL 专用环境配置文件
# 此配置文件针对SQLite数据库进行了优化，减少资源占用

APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# SQLite 配置（LiteSQL模式专用）
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# 数据库缓存设置（可选，根据需要启用）
# DB_CACHE=true
# DB_CACHE_DRIVER=file

# 优化缓存配置以减少内存使用
CACHE_DRIVER=file
CACHE_PREFIX=lite_

# 禁用不需要的服务和驱动
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# 禁用MySQL和其他数据库相关配置
# 不设置MySQL、PostgreSQL等相关环境变量

# 最小化Redis使用（如果不需要）
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# 邮件配置（简化版本）
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="LiteSQL App"

# 应用优化配置
APP_ENVIRONMENT=lite
OPTIMIZE_MODE=true
MEMORY_LIMIT=256M

# 自动填充APP_KEY（首次运行时）
# 注意：实际部署时请手动设置一个安全的APP_KEY